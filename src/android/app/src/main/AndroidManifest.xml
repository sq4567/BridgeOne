<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- USB Host API 권한 -->
    <uses-feature
        android:name="android.hardware.usb.host"
        android:required="true" />
    
    <!-- USB 통신 권한 -->
    <uses-permission android:name="android.permission.USB_DEVICE" />
    
    <!-- 진동 피드백 권한 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    
    <!-- 인터넷 권한 (향후 서버 연동용) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BridgeOne">
        
        <uses-library
            android:name="android.hardware.usb"
            android:required="false" />
        
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BridgeOne">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <!-- USB 장치 연결 Intent Filter (VID: 0x303A - Espressif) -->
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
            </intent-filter>
            
            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter" />
        </activity>
        
        <!-- USB 권한 요청 결과 수신 BroadcastReceiver -->
        <receiver
            android:name=".usb.UsbPermissionReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_PERMISSION" />
            </intent-filter>
        </receiver>
        
        <!-- USB 장치 연결/해제 감지 BroadcastReceiver (Phase 2.2.2.4) -->
        <receiver
            android:name=".usb.UsbDeviceDetectionReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
                <action android:name="android.hardware.usb.action.USB_DEVICE_DETACHED" />
            </intent-filter>
        </receiver>
    </application>

    <!-- USB 장치 필터 -->

</manifest>