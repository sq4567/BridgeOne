<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- USB 관련 권한 -->
    <uses-permission android:name="android.permission.USB_PERMISSION" />
    <uses-permission android:name="android.hardware.usb.host" />
    <uses-feature
        android:name="android.hardware.usb.host"
        android:required="false" />

    <!-- 진동 피드백 권한 -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BridgeOne">
        
        <uses-library
            android:name="android.hardware.usb"
            android:required="false" />
        
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BridgeOne">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <!-- USB 장치 연결 Intent Filter (VID: 0x303A - Espressif) -->
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
            </intent-filter>
            
            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter" />
        </activity>
        
        <!-- USB 권한 요청 결과 수신 BroadcastReceiver -->
        <!-- 구현 노트: MainActivity 또는 별도 BroadcastReceiver에서 
             ACTION_USB_PERMISSION Intent를 수신하여 처리함 -->
        <!-- 권한 요청은 UsbSerialManager.requestPermission()에서 
             PendingIntent로 전달되며, 결과는 handlePermissionResult()에서 처리됨 -->
        
    </application>

    <!-- USB 장치 필터 -->

</manifest>