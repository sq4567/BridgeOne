# TinyUSB Configuration (esp_tinyusb wrapper)
# Most settings are handled automatically by esp_tinyusb wrapper
# Only project-specific customizations are included below

# HID interface count (Keyboard + Mouse)
CONFIG_TINYUSB_HID_COUNT=2

# CDC interface (Enable Vendor CDC)
CONFIG_TINYUSB_CDC_ENABLED=y

# UART Optimization (Fast responsiveness)
CONFIG_UART_ISR_IN_IRAM=y

# FreeRTOS Configuration (1ms Tick rate -> 1000Hz, Dual-core enabled)
CONFIG_FREERTOS_HZ=1000
CONFIG_FREERTOS_UNICORE=n

# Memory Optimization (Size priority, PSRAM enabled)
CONFIG_COMPILER_OPTIMIZATION_SIZE=y

# PSRAM Configuration (ESP32-S3-N16R8: 8MB Octal PSRAM)
CONFIG_ESP32S3_SPIRAM_SUPPORT=y
CONFIG_SPIRAM=y
CONFIG_SPIRAM_MODE_OCT=y
CONFIG_SPIRAM_SPEED_80M=y
CONFIG_SPIRAM_USE_MALLOC=y

# Flash Configuration (ESP32-S3-DevkitC-1-N16R8: 16MB Flash)
CONFIG_ESPTOOLPY_FLASHSIZE_16MB=y
CONFIG_ESPTOOLPY_FLASHMODE_QIO=y
CONFIG_ESPTOOLPY_FLASHFREQ_80M=y
CONFIG_PARTITION_TABLE_CUSTOM=y
CONFIG_PARTITION_TABLE_CUSTOM_FILENAME="partitions.csv"

# Logging Level (Development: DEBUG, Production: INFO)
CONFIG_LOG_DEFAULT_LEVEL_DEBUG=y

# TinyUSB Debug Logging
CONFIG_TINYUSB_DEBUG_LEVEL=2

# Disable Unused Peripherals (Power saving)
CONFIG_ESP_WIFI_ENABLED=n
CONFIG_BT_ENABLED=n

# USB Console Configuration
# esp_tinyusb wrapper handles USB PHY switching automatically
# No need to manually disable USB Serial/JTAG
# Console uses UART0 (GPIO43/44, CH343P)
CONFIG_ESP_CONSOLE_UART_DEFAULT=y
